  <body>
    <div class="navbar">
      <div class="navbar-inner">
        <!--<button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>-->
        <a class="brand" href="/">Pusceiver</a>
